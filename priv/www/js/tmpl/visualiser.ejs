<div id="visualiser">

<script type="text/javascript" src="visualiser/js/glMatrix-min.js"></script>
<script type="text/javascript" src="visualiser/js/octtree.js"></script>
<script type="text/javascript" src="visualiser/js/physics.js"></script>
<script type="text/javascript" src="visualiser/js/model.js"></script>

<style type="text/css">
#side{
width: 16%;
height: 100%;
overflow: auto;
float: left;
}

.vis_main{
overflow: auto;
margin-top: 10px;
margin-left: 20px;
padding: 0;
border: 0;
float: left;
width: 80%
}

.inner{
margin: 10px;
}

.hidden{
width: 100%;
clear: both;
}

.show_button{
float: right;
}

#details{
height: 100px;
overflow: auto;
width: 80%;
margin: 0;
float: left;
}

#helpButton{
margin-right: 10px;
float: right;
}

#help{
position: fixed;
top: 10%;
right: 10%;
bottom: 10%;
left: 10%;
display: none;
background: white;
width: 80%;
border: 1px solid black;
-webkit-border-radius: 8px;
-moz-border-radius: 8px;
border-radius: 8px;
padding: 10px;
